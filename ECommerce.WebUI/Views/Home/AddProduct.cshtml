@model ECommerce.Models.Concrete.Product
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<br />
<h3>Add Product Page</h3>
<hr />

@if (TempData["MsgError"] != null)
{
    <div class="alert alert-danger">@TempData["MsgError"]</div>
    <br />
}

<form method="post" asp-controller="Home" asp-action="AddProduct">

    <div class="form-group col-md-6 offset-md-3">
        <label>Title</label>
        <input asp-for="Title" type="text" class="form-control" placeholder="Product Title..." required />
    </div>
    <br />

    <div class="form-group col-md-6 offset-md-3">
        <label>Description</label>
        <input asp-for="Description" type="text" class="form-control" placeholder="Product Description..." required />
    </div>
    <br />

    <div class="form-group col-md-6 offset-md-3">
        <label>Stock Quantity</label>
        <input asp-for="StockQuantity" type="number" class="form-control" placeholder="Product Stock Quantity..." required />
    </div>
    <br />

    <div class="form-group col-md-6 offset-md-3">
        <label>Category</label>
        <select class="form-control" id="Category" name="Category">
            @foreach (var item in ViewBag.FindCategories)
            {
                <option value="@item.Id">@item.Title</option>
            }
        </select>
    </div>
    <br />

    <div class="form-group col-md-6 offset-md-3">
        <button type="submit" class="btn btn-info">Add New Product</button>
    </div>

</form>